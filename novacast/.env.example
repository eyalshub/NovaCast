# Example environment configuration for NovaCast project

# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/novacast

# JWT configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# OAuth2 configuration
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret

# API keys
API_KEY=your_api_key

# Telemetry configuration
TELEMETRY_ENABLED=True
TELEMETRY_SERVICE_NAME=novacast

# Logging configuration
LOG_LEVEL=info

# Media processing configuration
TTS_ENGINE=coqui
VIDEO_TEMPLATE_PATH=/path/to/video/templates

# Storage configuration
STORAGE_BUCKET=your_storage_bucket
STORAGE_REGION=your_storage_region

# Other configurations
DEBUG=True
